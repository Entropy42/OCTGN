<Controls:OctgnChrome
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:Controls="clr-namespace:Octgn.Controls" xmlns:Gui="clr-namespace:Octgn.Play.Gui"
        xmlns:Launcher="clr-namespace:Octgn.Launcher" x:Class="Octgn.Windows.Main"
        Title="OCTGN"
        Height="599.58" Width="1102.138" WindowStyle="None" MinWidth="400" MinHeight="400" WindowIcon="../Resources/Icon.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="247"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <TabControl  Grid.Row="1">
            <TabItem x:Name="TabMain" Header="OCTGN">
                <Frame Source="../Launcher/Login.xaml" NavigationUIVisibility="Hidden">
                </Frame>
            </TabItem>
            <TabItem x:Name="TabLobby" Header="Lobby Chat">
            </TabItem>
            <TabItem Header="Custom Games">
            </TabItem>
            <TabItem Header="Matchmaking(Comming Soon)" IsEnabled="false">
            </TabItem>
        </TabControl>
        <GridSplitter Width="5" Grid.Row="1" Grid.Column="1" ResizeBehavior="PreviousAndNext" Background="Black" Margin="0,25,0,0"/>
        <Menu Grid.ColumnSpan="3" Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem x:Name="menuLogOff" Header="Log Off" HorizontalAlignment="Left" Width="137"/>
                <MenuItem x:Name="menuExit" Header="Exit" HorizontalAlignment="Left" Width="137"/>
            </MenuItem>
            <MenuItem Header="About">
                <MenuItem x:Name="menuHelp" Header="Help" HorizontalAlignment="Left" Width="137"/>
                <MenuItem x:Name="menuAbout" Header="About" HorizontalAlignment="Left" Width="137" Click="menuAbout_Click"/>
            </MenuItem>
        </Menu>
        <StackPanel Grid.ColumnSpan="3" Grid.Row="3" Orientation="Horizontal" FlowDirection="RightToLeft" Background="#FF4B4B4B">
            <StackPanel x:Name="ConnectBox" Orientation="Horizontal" Visibility="Visible" Margin="10,0,10,0">
                <ProgressBar IsIndeterminate="True" Margin="0,7,0,7" Width="70"/>
                <Label x:Name="tbConnect" VerticalAlignment="Center" Margin="8,0,0,0" Content="Reconnecting"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Controls:OctgnChrome>
